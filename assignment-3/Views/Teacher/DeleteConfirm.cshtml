@model assignment_3.Models.Teacher
@{
    ViewBag.Title = "DeleteConfirm";
}

<div id="containershow">

    <h2>Are you sure to delete @Model.TeacherFname @Model.TeacherLname?</h2>
    <p>This action cannot be undone</p>
    <nav>
        <button class="navlink" href="/Teacher/List">Cancel</button>
        <form action="/Teacher/Delete/@Model.TeacherId" method="post">
            <button class="dellink">Delete</button>
        </form>

    </nav>
</div>
<style>
    nav{
        width:40%;
        margin:0 auto;
    }
    .dellink{
        float:right;
        color:red;
    }
</style>


